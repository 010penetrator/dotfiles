let rtp0=split(&runtimepath, ',')[0]
if !filereadable(rtp0 . "/autoload/plug.vim")
    echom "--Will try to download  Plug.vim  to " . rtp0 . "/autoload"
    if !empty(g:bash_forced)
        let l:my_autoload_nix = system('cygpath -u "' . rtp0 . '/autoload" | tr -d "\n"')
        silent call system("curl -fLo \"" . l:my_autoload_nix . "\"/plug.vim --create-dirs https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim && echo success with curl!")
    else
        "silent call system("curl -s --head -m 1 https://github.com 1>/dev/null && OR --output NUL for Windows")
        echo system("curl -fLo " . rtp0 . "/autoload/plug.vim --create-dirs https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim && echo success with curl!")
    endif
endif

let g:vimplug_available=0
if filereadable(rtp0 . "/autoload/plug.vim")
    let g:vimplug_available=1
else
    let g:vimplug_available=0
endif

" Oneliner to Plug on condition
    " Plug 'benekastah/neomake", has("nvim") ? {} : { "on': [] }
" Same wrapped into a function
function! Cond(cond, ...)
    let opts = get(a:000, 0, {})
    return a:cond ? opts : extend(opts, { 'on': [], 'for': [] })
endfunction
" Looks better
    " Plug 'benekastah/neomake', Cond(has("nvim"))
" With other options
    " Plug 'benekastah/neomake', Cond(has("nvim"), { 'on': 'Neomake' })

"if exists("g:loaded_plug")
if exists("g:vimplug_available")
    if !empty($PLUGDIR)
call plug#begin($PLUGDIR)
    else
call plug#begin()
    endif

