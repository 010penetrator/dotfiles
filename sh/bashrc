c() { a=wd${1}; cd ${!a}; }
cl() { arg="$*"; rp=$(realpath ${!arg});
    # echo arg is "$*" ; echo rp is _ $rp _
    # echo "will cd to \$$*"
    { [[ -d $rp ]] && cd "$rp"; } ||
    { [[ -f $rp ]] && cd $(dirname "$rp"); } ||
        echo "No such file or dir path!"; }
