# Functions #
zz() { du -csh $*; arcname=$(echo "$*" | tr / _); tar -I 'zstd -10 -T0' -cf "$arcname".tar.zst --exclude='.git' --exclude='tags' $*; du -sh "$arcname".tar.zst; }
