set scroll-step 220
set default-bg "#666"
set statusbar-fg "#bbb"
set statusbar-bg "#222"
set recolor-darkcolor "#060504"
set recolor-lightcolor "#f5edd1"
set font "monospace normal 10"
set smooth-scroll true

map i set recolor
map s scroll down
map w scroll up
map d scroll full-down
map e scroll full-up
map [ navigate previous
map ] navigate next
map I zoom in
map O zoom out
map * adjust_window width
map S toggle_statusbar
map f toggle_fullscreen
map <Space> scroll full-down
map b scroll full-up
map <BackSpace> scroll full-up

map [fullscreen] i set recolor
map [fullscreen] s scroll down
map [fullscreen] w scroll up
map [fullscreen] d scroll full-down
map [fullscreen] e scroll full-up
map [fullscreen] [ navigate previous
map [fullscreen] ] navigate next
map [fullscreen] I zoom in
map [fullscreen] O zoom out
map [fullscreen] * adjust_window width
map [fullscreen] S toggle_statusbar
map [fullscreen] f toggle_fullscreen
map [fullscreen] <Space> scroll full-down
map [fullscreen] b scroll full-up
map [fullscreen] <BackSpace> scroll full-up

set window-width 1080
set window-height 1000

